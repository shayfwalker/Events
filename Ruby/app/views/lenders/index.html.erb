<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>




<form action="/lenders/create" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<h1>Register to be a Lender!</h1>

	<label>
		First Name:<input type="text" name="lender[first_name]">
	</label><br>
	<label>
		Last Name:<input type="text" name="lender[last_name]">
	</label><br>
	<label>
		Email:<input type="email" name="lender[email]">
	</label><br>
	<label>
		Password: <input type="password" name="lender[password]">
	</label><br>
	<label>
		Confirm PW: <input type="password" name="lender[password_confirmation]">
	</label><br>
	<label>
		Money: <input type="integer" name="lender[money]">
	</label><br>
	<a href="/logins/index">Already a member?</a>
	<input type="submit" name="Submit">
</form>


<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
		

	<% end %>
<% end %>




